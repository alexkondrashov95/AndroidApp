		ТекДата = Параметры.Дата;
		
		Список.ТекстЗапроса = Список.ТекстЗапроса + " ГДЕ 
		|ДокументТренировка.Дата 
		|	МЕЖДУ 
		|ДАТАВРЕМЯ("+Формат(ТекДата,"ДФ=yyyy")+","+Формат(ТекДата,"ДФ=MM")+","+Формат(ТекДата,"ДФ=dd")+",0,0,0)
